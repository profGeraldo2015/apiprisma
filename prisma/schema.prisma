// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}


model Usser {
  id Int @id @default(autoincrement())

  email    String @unique
  password String

  name String
}

model Categorias {
  id Int @id @default(autoincrement())

  nome String @unique

  createdAt DateTime

  pratos Pratos[]

}

model Pratos {

  id Int @id @default(autoincrement())
  
  nome String
  descricao String
  preco Float

  categoria Categorias @relation(fields: [categoriaId], references: [id])
  categoriaId Int

  createdAt DateTime 
  
}

model Ingredientes {

  id Int @id @default(autoincrement())
  nome String @unique
  createdAt DateTime @default(now())
  updatedAt DateTime @default(now())

}